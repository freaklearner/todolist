<web-app>
	<servlet>
		<servlet-name>myservlet</servlet-name>
		<servlet-class>com.serv</servlet-class>		
	</servlet>
	<servlet-mapping>
		<servlet-name>myservlet</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>operate</servlet-name>
		<servlet-class>com.operation</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>operate</servlet-name>
		<url-pattern>/operate</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>driver</param-name>
		<param-value>com.mysql.jdbc.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>path</param-name>
		<param-value>jdbc:mysql://localhost/test</param-value>
	</context-param>
</web-app>